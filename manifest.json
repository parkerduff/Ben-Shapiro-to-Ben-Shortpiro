{
  "name": "Ben Shapiro to Ben Shortpiro",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Replaces the text 'Ben Shapiro' with 'Ben Shortpiro' on all pages (and twitter)!",

  "browser_action": {
    "default_icon": {
      "16": "icons/ben16.png",
      "32": "icons/ben32.png",
      "48": "icons/ben48.png",
      "128": "icons/ben128.png"
    },
    "default_title": "Definite Proof that Ben is Short",
    "default_popup": "ben.html"
  },

  "icons": {
    "16": "icons/ben16.png",
    "32": "icons/ben32.png",
    "48": "icons/ben48.png",
    "128": "icons/ben128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": ["tabs", "*://twitter.com/*"]
}
